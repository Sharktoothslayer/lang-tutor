# Database Configuration
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=langtutor
POSTGRES_USER=langtutor

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here

# Backend Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ENVIRONMENT=production
DEBUG=false

# Ollama Configuration
OLLAMA_MODEL=mistral:7b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Nginx Configuration (if using reverse proxy)
NGINX_SSL_CERT_PATH=./nginx/ssl/cert.pem
NGINX_SSL_KEY_PATH=./nginx/ssl/key.pem

# Learning Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh
TARGET_LANGUAGE=it
SPACED_REPETITION_ALGORITHM=sm2
NEW_WORDS_PER_SESSION=5
REVIEW_WORDS_PER_SESSION=20

# AI Conversation Configuration
AI_CONVERSATION_DIFFICULTY=adaptive
AI_MAX_NEW_WORDS_PER_CONVERSATION=3
AI_CONVERSATION_LENGTH=10
AI_REINFORCEMENT_FREQUENCY=0.8 